# Database (Docker volume path)
DATABASE_URL=sqlite:////app/data/oniontravel.db

# Security - CHANGE THESE IN PRODUCTION!
# Generate SECRET_KEY with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_USE_OPENSSL_RAND_HEX_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Update with your domain or server IP
# Examples:
# - Standard: http://YOUR_SERVER_IP
# - With domain: https://your-domain.pl,https://www.your-domain.pl
# - Mikrus.pl with SSL: https://jola209.mikrus.xyz:30209,http://jola209.mikrus.xyz:20209
ALLOWED_ORIGINS=https://jola209.mikrus.xyz:30209,http://jola209.mikrus.xyz:20209

# Currency API
# Get free API key from: https://www.exchangerate-api.com/
EXCHANGE_RATE_API_KEY=your-api-key-from-exchangerate-api-com
EXCHANGE_RATE_API_URL=https://v6.exchangerate-api.com/v6

# File Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760

# Scheduler (Currency rates update time)
CURRENCY_UPDATE_HOUR=3
CURRENCY_UPDATE_TIMEZONE=UTC

# App Info
APP_NAME=OnionTravel
VERSION=1.0.0
